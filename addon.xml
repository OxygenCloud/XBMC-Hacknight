<addon id="plugin.video.oxygencloud" version="0.0.1" name="oxygencloud" provider-name="Oxygen Cloud">
  <extension point="xbmc.python.pluginsource" library="start.py">
	<provides>video</provides>
  </extension> 
  <extension point="xbmc.addon.metadata">
	<summary>Oxygen Integration</summary>
	<description>Oxygen Cloud Integration for XBMC, kicked off at API Hacknight.  Uses the java API to get strm files of all media in a space and exposes it to XBMC.  Currently works in Linux.  Mac and Windows coming soon.</description>
	<platform>all</platform>
  </extension> 
</addon>
